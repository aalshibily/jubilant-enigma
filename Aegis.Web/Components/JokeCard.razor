@using Aegis.Core.Domain.Entities

<div class="card bg-opacity-75 mb-3 @(isEven? "bg-dark text-white" : "bg-light text-dark")">
    <div class="card-header">
        @Joke.Type.GetFriendlyName()
        <span class="float-end">#@Joke.Id</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Joke.Setup</h5>
        <p class="card-text">@Joke.Punchline</p>
    </div>
</div>

@code {
    [Parameter]
    public Joke Joke { get; set; }
    [Parameter]
    public bool isEven { get; set; }
}