@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="(e)=>IncrementCount(e)">Click me</button>

<p>You can also shift-click!</p>

@code {
    private int currentCount = 0;

    private void IncrementCount(MouseEventArgs e)
    {
        currentCount += e.ShiftKey ? 10 : 1;
    }

}