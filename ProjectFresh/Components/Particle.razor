@inject IJSRuntime JS
@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        Console.WriteLine("Initializing particle JS");
        if (firstRender)
        {
            await JS.InvokeVoidAsync("Particles.init", new
            {
                selector = ".background",
                color = "#00FFFF",
                //color = new []{ "#00FF00","#FF0000","#0000FF"},
                maxParticles = 90,
                connectParticles = true
            });
        }
    }
}
